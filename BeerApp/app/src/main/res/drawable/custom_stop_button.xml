<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/stopSessionRed" />
            <corners android:radius="10dp"/>
            <padding
                android:left="8dp"
                android:right="8dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/stopSessionRedDark" />
            <corners android:radius="10dp"/>
            <padding
                android:left="8dp"
                android:right="8dp" />
        </shape>
    </item>
</selector>